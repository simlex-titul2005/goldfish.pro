@model SxVMMaterial[]
@{
    var boxHeader = ViewContext.ParentActionViewContext?.ViewData["BoxHeader"];
}

@if (Model.Any())
{
    SxVMMaterial item = null;
    <h4 class="partial-box__header">@(boxHeader ?? "Последние материалы")</h4>
    <div class="similar-materials">
        @for (int i = 0; i < Model.Length; i++)
        {
            item = Model[i];
            <div class="similar-material__item">
                <h4 class="similar-material__title">@item.Title</h4>
                <div class="similar-material__fwd">@item.Foreword</div>
                <div class="similar-material__footer">
                    <a href="@item.GetUrl(Url)">Подробнее</a>
                </div>
            </div>
        }
    </div>
}
