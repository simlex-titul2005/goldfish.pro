@model SxVMRegister

@section styles{
    <style>
        html, body, .wrapper, .slider, .slider__box, .slider__content {
            height: 100%;
        }

        .wrapper{
            padding-bottom:0 !important;
        }

        .slider__content {
            margin-top: -90px;
            padding-top: 90px;
        }
    </style>
}

@section slider{
    <div class="form-login">
        <form method="post" action="@Url.Action("Login", "Account")">
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.EditorFor(x => x.NikName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите Ваш ник-нейм *" } })
                @Html.ValidationMessageFor(x => x.NikName)
            </div>

            <div class="form-group">
                @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите Email *" } })
                @Html.ValidationMessageFor(x => x.Email)
            </div>

            <div class="form-group">
                @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите пароль *" } })
                @Html.ValidationMessageFor(x => x.Password)
            </div>

            <div class="form-group">
                <button type="submit" class="btn">Войти в аккаунт</button>
            </div>
        </form>
    </div>
}

@section scripts{
    <script src="@Url.Action("Js", "StaticContent", new { name = "jquery.validate" })"></script>
    <script src="@Url.Action("Js", "StaticContent", new { name = "jquery.validate.unobtrusive" })"></script>
}