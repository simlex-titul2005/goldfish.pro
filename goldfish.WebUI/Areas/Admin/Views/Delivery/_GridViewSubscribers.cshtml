@model SxVMSubscriber[]
@{
    SxFilter filter = ViewBag.Filter;
}

@Html.SxGridView(Model, new SxExtantions.SxGridViewSettings<SxVMSubscriber>
{
    Columns = new SxExtantions.SxGridViewColumn<SxVMSubscriber>[] {
        new SxExtantions.SxGridViewColumn<SxVMSubscriber>() { FieldName="DateCreate", Caption="Дата создания", ColumnCssClass=x=>"col-zero" },
        new SxExtantions.SxGridViewColumn<SxVMSubscriber>() { FieldName="Email", Caption="Email" },
        new SxExtantions.SxGridViewColumn<SxVMSubscriber>() { FieldName="Id", Caption="Функции", ColumnCssClass=x=>"col-cm", Template=x=>string.Format("<button type=\"button\" class=\"btn btn-default btn-sm\">Отправить</button>") }
    },
    DataAjaxUrl = Url.Action("Subscribers"),
    ShowSelectedCheckbox = true
})